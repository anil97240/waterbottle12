<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:textAlignment="center"
    >

    <EditText
        android:id="@+id/edtaddress"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="379dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="44dp"
        android:drawableRight="@drawable/address"
        android:ems="10"
        android:hint="Enter Address"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtaddresstwo"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="424dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="41dp"
        android:drawableRight="@drawable/address"
        android:ems="10"
        android:hint="Enter Address1"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtbarcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="470dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="43dp"
        android:drawableRight="@drawable/qrcode"
        android:ems="10"
        android:hint="Enter Barcode No"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgview"
        android:layout_width="164dp"
        android:layout_height="127dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/button"
        app:srcCompat="@drawable/cus" />

    <Button
        android:id="@+id/btnupload"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="237dp"
        android:layout_toEndOf="@+id/tvuploadfile"
        android:layout_toRightOf="@+id/tvuploadfile"
        android:background="@drawable/button"
        android:text="Upload Image"
        android:textColor="@color/default_circle_indicator_fill_color"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvuploadfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="241dp"
        android:text="Add Image"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnallclient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:background="@color/colorAccent"
        android:text="Profile"
        android:textColor="@color/default_circle_indicator_fill_color"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtnm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="281dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="56dp"
        android:drawableRight="@drawable/nm"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtmob"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="326dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="51dp"
        android:drawableRight="@drawable/call"
        android:ems="10"
        android:hint="Enter Mobile Number"
        android:inputType="textPersonName|phone"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnscannbarcode"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="517dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:background="@drawable/button"
        android:text="Scan"
        android:textColor="@color/default_circle_indicator_fill_color"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnaddclient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"

        android:layout_marginBottom="44dp"
        android:background="@drawable/button"
        android:text="ADD"
        android:textColor="@color/default_circle_indicator_fill_color"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="77dp" />
</RelativeLayout>