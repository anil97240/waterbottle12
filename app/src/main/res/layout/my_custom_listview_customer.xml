<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_view_corner"
    android:paddingBottom="10dp">


    <ImageView
        android:id="@+id/imgclient"
        android:layout_width="101dp"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="302dp"
        app:srcCompat="@drawable/cus" />

    <TableLayout
        android:layout_width="229dp"
        android:layout_height="146dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="99dp"
                android:layout_height="36dp"
                android:text=" Name"
                android:textColor="@color/colorBackgroud"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="99dp"
                android:layout_height="36dp"
                android:text="Barcode no"
                android:textColor="@color/colorBackgroud"
                android:textSize="18sp"
                android:textStyle="bold" />


        </TableRow>

        <TableRow
            android:layout_width="425dp"
            android:layout_height="49dp"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tvcnm"
                android:layout_width="99dp"
                android:layout_height="36dp"
                android:text="abc"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvbarcode"
                android:layout_width="99dp"
                android:layout_height="36dp"
                android:text="1234545"
                android:textSize="18sp"
                android:textStyle="bold" />


        </TableRow>

        <TableRow
            android:layout_width="425dp"
            android:layout_height="49dp"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="99dp"
                android:layout_height="36dp"
                android:text="Mobile No"
                android:textColor="@color/colorBackgroud"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="99dp"
                android:layout_height="36dp"
                android:text="Address"
                android:textColor="@color/colorBackgroud"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="425dp"
            android:layout_height="49dp"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tvmobno"
                android:layout_width="110dp"
                android:layout_height="36dp"

                android:text="9751212120"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvaddress"
                android:layout_width="99dp"
                android:layout_height="36dp"
                android:paddingLeft="10dp"
                android:text="Rajkot"
                android:textSize="18sp"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>


</RelativeLayout>