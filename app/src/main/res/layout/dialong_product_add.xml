<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorDialog"
    android:paddingBottom="5dp"
    android:textAlignment="center">

    <EditText
        android:id="@+id/edtdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="294dp"
        android:drawableRight="@drawable/desc"
        android:ems="10"
        android:hint="Enter Details"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgview"
        android:layout_width="wrap_content"
        android:layout_height="116dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="84dp"
        android:src="@drawable/cus"
        app:civ_border_color="@color/fabtext"
        app:civ_border_width="3dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnuploadimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="126dp"
        android:clickable="true"
        android:tint="@color/colorText"
        app:backgroundTint="@color/colorFAB1"
        app:rippleColor="@color/common_google_signin_btn_text_dark_focused"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="172dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="73dp"
        android:layout_marginRight="73dp"
        android:text="Add Product"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnallproduct"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/list"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnproclose"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="353dp"
        android:layout_marginEnd="0dp"
        android:background="@color/colorFAB1"
        android:text="Close"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtnm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtdetail"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="209dp"
        android:drawableRight="@drawable/pnm"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:textColor="@color/colorBackgroud"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="251dp"
        android:drawableRight="@drawable/pprice"
        android:ems="10"
        android:hint="Enter Price"
        android:inputType="phone"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnaddproduct"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="353dp"
        android:layout_marginRight="223dp"
        android:background="@color/colorFAB1"
        android:text="ADD"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>