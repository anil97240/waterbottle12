<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorDialog"
    android:paddingBottom="5dp"
    android:textAlignment="center">

    <EditText
        android:id="@+id/edtdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="294dp"
        android:drawableRight="@drawable/desc"
        android:ems="10"
        android:hint="Enter Details"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgview"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="102dp"
        android:layout_marginRight="115dp"
        android:background="@drawable/button"
        app:srcCompat="@drawable/cus" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="172dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:text="Add Product"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnallproduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:background="@color/colorFAB1"
        android:text="All Product"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtnm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtdetail"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="209dp"
        android:drawableRight="@drawable/pnm"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:textColor="@color/colorBackgroud"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="251dp"
        android:drawableRight="@drawable/pprice"
        android:ems="10"
        android:hint="Enter Price"
        android:inputType="textPersonName|phone"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnaddproduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"

        android:layout_marginTop="351dp"
        android:layout_marginRight="0dp"
        android:background="@color/colorFAB1"
        android:text="ADD"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>