<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/srv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uibackgroud"
    tools:context=".admin_agent_side.agent_login">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="278dp"
        android:layout_height="89dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        app:srcCompat="@drawable/logo1" />

    <EditText
        android:id="@+id/edtusername1"
        android:layout_width="288dp"

        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:backgroundTint="#4E4C4C"
        android:drawableRight="@drawable/ic_username"
        android:ems="10"
        android:hint="@string/user_name"
        android:inputType="textPersonName"
        android:textColor="#4E4C4C"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtpass1"
        android:layout_width="288dp"
        android:layout_height="42dp"

        android:layout_alignParentTop="true"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:backgroundTint="#4E4C4C"
        android:drawableRight="@drawable/ic_lock"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="#4E4C4C"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="256dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="78dp"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="404dp"
        android:layout_marginEnd="77dp"
        android:layout_marginRight="77dp"
        android:background="@drawable/button"
        android:onClick="register"
        android:text="Login"
        android:textColor="@color/colorText"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="6dp"
        android:onClick="godashboard"
        android:text="I am Client"
        android:textAlignment="center"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="25sp" />


</RelativeLayout>