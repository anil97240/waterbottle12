<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
android:background="@drawable/dialog_corner"
    android:textAlignment="center">

    <EditText
        android:id="@+id/edtaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="387dp"
        android:drawableRight="@drawable/address"
        android:ems="10"
        android:hint="Enter Address"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtaddresstwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="429dp"
        android:drawableRight="@drawable/address"
        android:ems="10"
        android:hint="Enter Address1"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtbarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="473dp"
        android:drawableRight="@drawable/qrcode"
        android:ems="10"
        android:hint="Enter Barcode No"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgview"
        android:layout_width="164dp"
        android:layout_height="127dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="142dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="143dp"
        android:background="@drawable/button"
        app:srcCompat="@drawable/cus" />

    <Button
        android:id="@+id/btnupload"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="245dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="46dp"
        android:background="@drawable/button"
        android:text="Upload Image"
        android:textColor="@color/default_circle_indicator_fill_color"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvuploadfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="245dp"
        android:text="Add Image"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="128dp"
        android:text="Add Client"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnallclient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/button"
        android:text="All Client"
        android:textColor="@color/default_circle_indicator_fill_color"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtnm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="297dp"
        android:drawableRight="@drawable/nm"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtmob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="341dp"
        android:drawableRight="@drawable/call"
        android:ems="10"
        android:hint="Enter Mobile Number"
        android:inputType="textPersonName|phone"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnscannbarcode"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="475dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/button"
        android:text="Scan"
        android:textColor="@color/default_circle_indicator_fill_color"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnaddclient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="9dp"

        android:layout_marginRight="9dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button"
        android:text="ADD"
        android:textColor="@color/default_circle_indicator_fill_color"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="77dp" />
</RelativeLayout>