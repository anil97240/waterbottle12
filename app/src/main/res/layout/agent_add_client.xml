<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorDialog"
    android:paddingBottom="5dp"
    android:textAlignment="center">

    <EditText
        android:id="@+id/edtname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="274dp"
        android:drawableRight="@drawable/address"
        android:ems="10"
        android:hint="Enter Address"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtaddresstwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtname"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="322dp"
        android:drawableRight="@drawable/address"
        android:ems="10"
        android:hint="Enter Local Address"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtbarcode"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtname"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="371dp"
        android:drawableRight="@drawable/qrcode"
        android:ems="10"
        android:hint="Enter Barcode No"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgview"
        android:layout_width="188dp"
        android:layout_height="119dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="42dp"
        android:layout_marginRight="176dp"
        android:background="@drawable/button"
        app:srcCompat="@drawable/cus" />

    <EditText
        android:id="@+id/edtnm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="177dp"
        android:layout_marginEnd="0dp"
        android:drawableRight="@drawable/nm"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtmob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtname"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="224dp"
        android:drawableRight="@drawable/call"
        android:ems="10"
        android:hint="Enter Mobile Number"
        android:inputType="textPersonName|phone"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnscannbarcode"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/button"
        android:text="Scan"

        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnuploadimg"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="79dp"
        android:layout_marginRight="79dp"
        android:background="@drawable/button"
        android:text="Upload"

        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnaddclient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"

        android:layout_marginTop="422dp"
        android:layout_marginRight="0dp"
        android:background="@color/colorFAB1"
        android:text="ADD"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>